[***********************************************************[[ rm.ExpandIntro[[ this room expands the small frame of Jerrod into the full[ size screen that has four different scenes[[***********************************************************[ **************************************[ LOCAL DEFINES[ **************************************#define oHead                        o1#define vPic2                      v220#define vPic3                      v221#define vPic4                      v222#define vTimer                     v223#define fSndDone                   f220[ **************************************[ FIRST CYCLE ONLY[ **************************************if (isset(newRoom))  {  [ load the pictures for the expanding intro screen  [ animation  vPic2 = pic.IntroF2;  vPic3 = pic.IntroF3;  vPic4 = pic.IntroFull;  load.pic(currentRoom);  load.pic(vPic2);  load.pic(vPic3);  load.pic(vPic4);    [ load views used in the room  load.view(vw.JerrodHeadIntro);  load.view(vw.IntroBanners);  load.view(vw.IntroScene1);    [ play the introduction sound  load.sound(s.Intro);  sound(s.Intro, fSndDone);    [ draw the intro screens in succession one after another;  [ the banners and Jerrod's head need to be added to the  [ center of each screen - this gives the effect of the   [ main intro screen 'expanding' into its full size    [ first screen  draw.pic(currentRoom);  add.to.pic(vw.IntroBanners, 2, 0, 14, 12, 4, 4);  add.to.pic(vw.IntroBanners, 3, 0, 24, 167, 4, 4);  add.to.pic(vw.JerrodHeadIntro, 0, 3, 71, 103, 15, 15);  [ show it  show.pic();    [ second screen  draw.pic(vPic2);  add.to.pic(vw.IntroBanners, 2, 0, 14, 12, 4, 4);  add.to.pic(vw.IntroBanners, 3, 0, 24, 167, 4, 4);  [ fire pit in scene 1 is now visible  add.to.pic(vw.IntroScene1, 9, 0, 35, 81, 4, 4);  add.to.pic(vw.JerrodHeadIntro, 0, 0, 71, 103, 15, 15);  [ show it immediately - no timer so this animation  [ happens as fast as the processor allows  show.pic();    [ third screen  draw.pic(vPic3);  add.to.pic(vw.IntroBanners, 2, 0, 14, 12, 4, 4);  add.to.pic(vw.IntroBanners, 3, 0, 24, 167, 4, 4);  [ fire pit still visible  add.to.pic(vw.IntroScene1, 9, 0, 35, 81, 4, 4);  add.to.pic(vw.JerrodHeadIntro, 0, 1, 71, 103, 15, 15);  [ show it immediately - no timer so this animation  [ happens as fast as the processor allows  show.pic();    [ final screen  [ no banners need to be added to this image  draw.pic(vPic4);  [ include the fire pit  add.to.pic(vw.IntroScene1, 9, 0, 35, 81, 4, 4);    [ Jerrod's head (so he will look around while the scene  [ waits for the timer to advance to the next room  animate.obj(oHead);  set.view(oHead, vw.JerrodHeadIntro);  set.loop(oHead, 0);  set.cel(oHead, 1);  set.priority(oHead, 15);  position(oHead, 71, 103);  draw(oHead);  [ reuse variable vPic4 to change cycle time  vPic4 = 4;  cycle.time(oHead, vPic4);    [ show the final picture of the full size intro  show.pic();    [ no input allowed during introduction  prevent.input();  lastChar = 0;  reset(haveMatch);  }[ **************************************[ EVERY CYCLE[ **************************************[ increment timer++vTimer;[ after 20 cyclesif (vTimer == 20)  {  [ move on to main introduction  new.room(rm.Introduction); [ ##LE001##  }  [ always allow player to skip the introduction by pressing[ any keyif (have.key())  {  new.room(rm.MainSt); [ ##LE002##  }  return();[ **************************************[ MESSAGES[ **************************************