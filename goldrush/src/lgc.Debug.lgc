[***********************************************************[[ lgc.Debug[[ This is the standard debug logic, found in many Sierra[ games, and in most fan based games. Typically it's[ accessed by setting a flag to put the game in debug mode,[ usually by typing in a specific phrase. For Gold Rush that[ phrase is "BIRD BOY".[[***********************************************************[ always make sure trace option is enabledif (!isset(enableTrace))  {  set(enableTrace);  }  [ controller c13 is never assigned; it was probably[ commented out when debugging was partially disabled prior[ to releaseif ((controller(c13) || said("show", "mem")))  {  show.mem();  }[ process any debug commands entered; note that none of[ these command do any error checking; it is very easy to [ cause a problem by entering invalid information,[ particularly if using a command to change something in the[ game; players/debuggers need to be extra careful when[ using debug commands[ display the priority screenif ((controller(keyShowPri) || said("show", "pri")))  {  show.pri.screen();  }[ force ego priority to new valueif (said("set", "pri"))  {  get.num("New priority:", DebugVar2);  set.priority.v(ego, DebugVar2);  }  [ release ego priority to automatic assignment based on[ locationif (said("release", "pri"))  {  release.priority(ego);  }  [ teleport ego to a new room - this one can be tricky if the[ player/debugger is not familiar with the structure of[ rooms in the game; entering an invalid room number will[ cause the game to crash, and many rooms will also cause[ big problems if they are accessed by teleporting instead[ of their normal sequenceif (said("tp"))  {  get.num("New room:", DebugVar1);  new.room.v(DebugVar1);  }  [ change ego's position on screenif (said("position"))  {  get.num("X coordinate:", DebugVar1);  get.num("Y coordinate:", DebugVar2);  erase(ego);  position.v(ego, DebugVar1, DebugVar2);  draw(ego);  }  [ show ego's object information - this does NOT show his[ coordinates on screen; it shows the object information[ messageif ((said("show", "position") ||     controller(keyShowCoords) ||     said("sp")))  {  DebugVar1 = 0;  obj.status.v(DebugVar1);  }[ show object information for any objectif ((said("show", "obj") ||     said("obj")))  {  get.num("Object number:", DebugVar1);  obj.status.v(DebugVar1);  }  [ add an item to ego's inventoryif (said("acquire", "obj"))  {  get.num("Object number:", DebugVar1);  get.v(DebugVar1);  }  [ show the value of a flagif ((said("show", "flag") ||     said("sf")))  {  get.num("Flag number:", DebugVar1);  if (issetv(DebugVar1))    {    print("Flag %v120 set");    }  else    {    print("Flag %v120 not set");    }  }  [ set a flag value to 'true'if (said("set", "flag"))  {  get.num("Flag number:", DebugVar1);  set.v(DebugVar1);  }  [ set a flag value to 'false'if (said("reset", "flag"))  {  get.num("Flag number:", DebugVar1);  reset.v(DebugVar1);  }  [ show the value of a variableif (said("show", "var"))  {  get.num("Variable number:", DebugVar1);  DebugVar2 = *DebugVar1;  print("Variable %v214 = %v215");  }  [ set the value of a variable to any valueif (said("set", "var"))  {  get.num("Variable number:", DebugVar1);  get.num("New value:", DebugVar2);  *DebugVar1 = DebugVar2;  }  [ display current room numberif (said("around", "number"))  {  print("Current room = %v0");  }return();[ **************************************[ MESSAGES[ **************************************#message 1 "New room:"#message 2 "X coordinate:"#message 3 "Y coordinate:"#message 4 "Object number:"#message 5 "Flag number:"#message 6 "New value:"#message 7 "Current room = %v0"#message 8 "Variable number:"#message 9 "Variable %v214 = %v215"#message 10 "Flag %v120 set"#message 11 "Flag %v120 not set"#message 12 "Word not known:"#message 13 "No response to input."#message 14 "%m12\"%w1\""#message 15 "%m12\"%w2\""#message 16 "%m12\"%w3\""#message 17 "%m12\"%w4\""#message 18 "%m12\"%w5\""#message 19 "%m12\"%w6\""#message 20 "%m12\"%w7\""#message 21 "%m12\"%w8\""#message 22 "%m12\"%w9\""#message 23 "New priority:"